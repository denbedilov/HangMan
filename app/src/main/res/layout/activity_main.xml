<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="denys.hangman.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/GameFrame">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/GamePanel">

                <denys.hangman.GameView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/gamePanel"
                    android:layout_gravity="center_vertical"
                    android:background="#eddcdc"
                    android:clickable="true"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/PreferencesPanel">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Game"
                    android:id="@+id/button27"
                    android:onClick="onClick" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/GuessedWordPanel"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/GuessedWordField"
                    android:singleLine="true"
                    android:textSize="@dimen/abc_guessed_word_size" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/AlphabetPanel">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/FirstLetterLine"
                    android:gravity="center_vertical|center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Q"
                        android:id="@+id/button"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/W"
                        android:id="@+id/button2"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/E"
                        android:id="@+id/button3"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/R"
                        android:id="@+id/button4"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/T"
                        android:id="@+id/button5"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Y"
                        android:id="@+id/button6"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/U"
                        android:id="@+id/button7"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/I"
                        android:id="@+id/button8"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/O"
                        android:id="@+id/button9"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:clickable="false" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/P"
                        android:id="@+id/button10"
                        android:layout_weight="1"
                        android:onClick="onClick" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/SecondLetterLine"
                    android:gravity="center_vertical|center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/A"
                        android:id="@+id/button11"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/S"
                        android:id="@+id/button12"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D"
                        android:id="@+id/button13"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/F"
                        android:id="@+id/button14"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/G"
                        android:id="@+id/button15"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/H"
                        android:id="@+id/button16"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/J"
                        android:id="@+id/button17"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/K"
                        android:id="@+id/button18"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/L_letter"
                        android:id="@+id/button19"
                        android:layout_weight="1"
                        android:onClick="onClick" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/ThirdLetterLine"
                    android:gravity="center_vertical|center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Z"
                        android:id="@+id/button20"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/X"
                        android:id="@+id/button21"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/C"
                        android:id="@+id/button22"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/V"
                        android:id="@+id/button23"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/B"
                        android:id="@+id/button24"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/N"
                        android:id="@+id/button25"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/M"
                        android:id="@+id/button26"
                        android:layout_weight="1"
                        android:onClick="onClick" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
